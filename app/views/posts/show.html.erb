<% content_for :meta do %>
  <%= render 'layouts/partials/meta', meta: @meta %>
<% end %>

<p style="color: green"><%= notice %></p>

<% cache @post do%>
  <%= render @post %>
<% end %>

<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to I18n.t(:destroy), @post, method: :delete %>
</div>
