<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= post.tags_string %>
  </p>

  <p>
    <strong>Writer:</strong>
    <%= post.writer_name %>
  </p>

</div>
