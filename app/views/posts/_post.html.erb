<div id="<%= dom_id post %>">
  <h3><%= post.title %></h3>
  <p class="timestamp">
    created: <%= time_ago_in_words(post.created_at) %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= post.tags_string %>
  </p>

  <p>
    <strong>Writer:</strong>
    <%= post.writer_name %>
  </p>
</div>
